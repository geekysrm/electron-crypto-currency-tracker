{
  "name": "electron-crypto-currency-tracker",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Crypto Tracker App\"",
    "package-linux": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "keywords": [
    "electron, electron-app, cryptocurrency, bitcoin, native, native-app, crypto, bitcoin, bitcoin-api"
  ],
  "author": "Soumya Ranjan Mohanty",
  "license": "MIT",
  "devDependencies": {
    "electron": "2.0.5",
    "electron-packager": "^12.1.0"
  },
  "dependencies": {
    "axios": "^0.18.1"
  }
}
